  .bi-history {
    padding: 64px 0px;
    @include grid(
      map-get($layout-desktop, column-number),
      map-get($layout-desktop, column-spacing),
      map-get($layout-desktop, margin)
    );
    margin-bottom: 172px;
    .bi-history-picture {
      grid-column: 2 / 6;
      background: lightgray;
      border-radius: 24px;
      overflow: hidden;
    }
    .bi-history-txt {
      grid-column: 7 / 12;
      h3 {
        margin-bottom: 40px;
      }
      p {
        margin-bottom: 32px;
      }
    }
    @include mq("tablet", max) {
      padding: 32px 0px;
      @include grid(
        map-get($layout-mobile, column-number),
        map-get($layout-mobile, column-spacing),
        map-get($layout-mobile, margin)
      );
      margin-bottom: 80px;
      .bi-history-picture {
        grid-column: 1 / 9;
        order: 2;
      }
      .bi-history-txt {
        order: 1;
        grid-column: 1 / 9;
        margin-bottom: 52px;
        h3 {
          margin-bottom: 24px;
        }
        p {
          margin-bottom: 16px;
        }
      }
    }
  }

  .bi-team {
    @include grid(
      map-get($layout-desktop, column-number),
      map-get($layout-desktop, column-spacing),
      map-get($layout-desktop, margin)
    );
    align-items: center;
    margin-bottom: 224px;
    & > div {
      grid-column: 2 / 7;
      h3 {
        margin-bottom: 40px;
      }
    }

    .bi-team-picture1 {
      grid-column: 8 / 10;
      div {
        background-color: lightgray;
        width: 100%;
        height: 380px;
        &:nth-child(1) {
          margin-bottom: 20px;
        }
      }
    }
    .bi-team-picture2 {
      grid-column: 10 / 12;
      margin-top: 80px;
      div {
        background-color: lightgray;
        width: 100%;
        height: 380px;
        &:nth-child(1) {
          margin-bottom: 20px;
        }
      }
    }
    @include mq("tablet", max) {
      @include grid(
        map-get($layout-mobile, column-number),
        map-get($layout-mobile, column-spacing),
        map-get($layout-mobile, margin)
      );
      margin-bottom: 104px;
      & > div {
        grid-column: 1 / 9;
        h3 {
          margin-bottom: 32px;
        }
      }
      .bi-team-picture1 {
        display: flex;
        grid-column: 1 / 9;
        margin-top: 32px;
